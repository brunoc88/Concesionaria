doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Concesionaria

    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous")

    // DataTables CSS
    link(rel="stylesheet", href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css")

  body
    // Navbar con estilo
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
      .container-fluid
        a.navbar-brand(href="/") Concesionaria
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav") 
          span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href=`/empleado/miPerfil/${user.id}`) Mi Perfil
            li.nav-item
              a.nav-link(href="/cliente/index") Clientes
            li.nav-item
              a.nav-link(href="/vehiculo/index") Vehículos
            li.nav-item
              a.nav-link(href="/logout") Cerrar sesión

    .container
      block content

    // jQuery
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")  

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous")

    // DataTables JS
    script(src="https://cdn.datatables.net/2.1.8/js/dataTables.js") 

    // Configuración de DataTables personalizada
    script(src="/js/dataTableConfig.js")
